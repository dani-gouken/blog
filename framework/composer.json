{
    "name": "oxygen/framework",
    "description": "A middleware based php framework",
    "type": "project",
    "license": "MIT",
    "config": {
        "platform": {
            "php": "7.3"
        }
    },
    "authors": [
        {
            "name": "Nghokeng Daniel",
            "email": "contact@tech-dany.com"
        }
    ],
    "autoload":{
        "psr-4":{
            "Oxygen\\":"src",
            "Oxygen\\Test\\":"tests"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "require": {
        "zendframework/zend-diactoros": "^2.1",
        "daniel/expressive-dic": "@dev",
        "league/plates": "^3.3",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "fig/http-message-util": "^1.1",
        "middlewares/whoops": "^1.2",
        "nikic/fast-route": "^1.3",
        "phpspec/prophecy": "^1.10",
        "twig/twig": "^3.0",
        "symfony/console": "^5.0",
        "doctrine/orm": "^2.7",
        "league/flysystem": "^1.0",
        "rakit/validation": "^1.2",
        "doctrine/migrations": "^2.0"
    },
    "repositories": {
      "expresive-dic-repo":{
        "type": "path",
        "url": "C:/xampp/htdocs/ExpressiveDIC",
        "options": {
          "symlink": true
        }
      }
    },
    "scripts":{
        "test":"phpunit --no-coverage"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4"
    }
}
